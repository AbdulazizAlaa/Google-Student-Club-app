<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- removing android actionbar -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:screenOrientation">portrait</item>
        <!-- setting material theme colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- setting window animations -->
        <!--<item name="android:actionBarStyle">@style/actionbar</item>
        <item name="android:windowAnimationStyle">@style/Animation.window</item>-->

        <!-- setting edit text style -->
        <item name="android:editTextStyle">@style/editText</item>

    </style>

    <style name="actionbar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="android:titleTextStyle">@style/actionbarTextStyle</item>
        <!--<item name="android:homeLayout">@layout/action_bar_layout</item>-->
        <!-- compatibalitiy issues -->
        <item name="background">@color/primary</item>
    </style>

    <style name="actionbar.text" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="actionbarTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="editText" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_edittext_background</item>
        <item name="android:ems">10</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="Animation" />

    <style name="Animation.window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/accelerate_interpolator</item>
    </style>

</resources>
